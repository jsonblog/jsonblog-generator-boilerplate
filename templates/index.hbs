{{#> layout}}
  {{#*inline "content"}}
    {{#each posts}}
      <article class="post-card">
        <h2><a href="{{this.slug}}.html">{{this.title}}</a></h2>
        {{#if this.createdAt}}
          <time datetime="{{this.createdAt}}">{{formatDate this.createdAt}}</time>
        {{/if}}
      </article>
    {{/each}}
  {{/inline}}
{{/layout}}
