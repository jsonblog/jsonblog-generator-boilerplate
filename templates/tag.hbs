{{#> layout}}
  <div class="container">
    <header class="page-header">
      <h1>Posts tagged with "{{tag}}"</h1>
      <p class="tag-count">{{posts.length}} post{{#unless (eq posts.length 1)}}s{{/unless}}</p>
    </header>

    <div class="posts">
      {{#each posts}}
        <article class="post-preview">
          <h2><a href="/{{this.slug}}.html">{{this.title}}</a></h2>
          {{#if this.description}}
            <p class="post-description">{{this.description}}</p>
          {{/if}}
          <div class="post-meta">
            <time datetime="{{this.createdAt}}">{{formatDate this.createdAt}}</time>
            {{#if this.tags}}
              <div class="post-tags">
                {{#each this.tags}}
                  <a href="/tag/{{slugify this}}.html" class="tag">{{this}}</a>
                {{/each}}
              </div>
            {{/if}}
          </div>
        </article>
      {{/each}}
    </div>

    <nav class="breadcrumb">
      <a href="/">‚Üê Back to all posts</a>
    </nav>
  </div>
{{/layout}}